<!-- DataTales Example -->
<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-md-8">
        <div class="table-responsive">
          <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>Invoice</th>
                <th>Total</th>
                <th>Status Pembayaran</th>
                <th>Nama Gunung</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><%= booking.invoice %></td>
                <td>Rp. <%= booking.total %> </td>
                <% if(booking.payments.payment_status=="waiting"){ %>
                <td class="text-center">Menunggu </td>
                <% } %>
                <td><%= booking.itemId.title %> </td>
              </tr>
            </tbody>
          </table>
          <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
            <thead>
              <tr>
                <th>No</th>
                <th>Nama</th>
                <th>Alamat</th>
                <th>No ID</th>
                <th>Telepon</th>
              </tr>
            </thead>
            <tbody>
              <% booking.memberId.forEach(function(member, index) { %>
              <tr>
                <td><%= index + 1 %></td>
                <td><%= member.nameMember %></td>
                <td><%= member.addressMember %></td>
                <td><%= member.noIdMember %></td>
                <td><%= member.phoneMember %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>








        </div>
      </div>
    </div>
  </div>
</div>